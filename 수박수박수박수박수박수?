class Solution {
    public String solution(int n) {
        String answer = "";
        if(n % 2 != 0) {
            n++;
            for(int i=0; i<n/2; i++){
                answer += "수박";
            }
            answer = answer.substring(0, n-1);
        } else {
            for(int i=0; i<n/2; i++){
                answer += "수박";
            }
        } 
        return answer;
    }
}
